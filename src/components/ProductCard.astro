---
const { image, title, price, link } = Astro.props;
---

<a href={link} class="block">
  <div class="bg-white rounded-xl shadow-md overflow-hidden transition-transform hover:scale-105 duration-300">
    <img src={image} alt={title} class="w-full h-48 object-cover rounded-t-xl" />
    <div class="flex justify-between items-center p-3">
      <h2 class="text-[#30475E] font-jockey text-lg">{title}</h2>
      <span class="text-[#121212] font-livvic text-base">{price}</span>
    </div>
  </div>
</a>
