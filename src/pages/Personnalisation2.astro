      </div>

      <div class="flex gap-4 mt-6 justify-end">
        <a href="/bibliotheque" class="bg-[#F05454] text-white px-6 py-2 rounded-full flex items-center justify-center">
          Enregistrer
        </a>
      </div>
    </div>
  </div>
</Layout>

<script type="module">
  const svg = document.getElementById("lunette");
  const userId = "{user?.id}";

  let couleurBranches = "";
  let couleurMonture = "";

  const urlParams = new URLSearchParams(window.location.search);
  const lunetteId = urlParams.get('id');

  function setColor(type, color) {
    if (type === "branches") {
      svg.querySelectorAll("#branches path").forEach(path => path.setAttribute("fill", color));
      couleurBranches = color;
    } else if (type === "monture") {
      svg.querySelectorAll("#monture path").forEach(path => path.setAttribute("fill", color));
      couleurMonture = color;
    }
  }

  document.querySelectorAll('.color-btn').forEach(button => {
    button.addEventListener('click', () => {
      // Gestion de la couleur active
      const type = button.dataset.type;
      document.querySelectorAll(`.color-btn[data-type="${type}"]`).forEach(btn => btn.classList.remove('border-4', 'border-black'));
      button.classList.add('border-4', 'border-black');

      // Changer la couleur SVG
      setColor(type, button.dataset.color);
    });
  });

  function getSVGCode() {
    return svg.outerHTML;
  }

  document.querySelector('a[href="/bibliotheque"]').addEventListener('click', async (e) => {
    e.preventDefault();

    try {
      const lunette = await pb.collection('LUNETTE').getOne(lunetteId);

      const data = {
        userId,
        materiau_monture: lunette.materiau_monture,
        materiau_verre: lunette.materiau_verre,
        taille_verre: lunette.taille_verre,
        taille_pont: lunette.taille_pont,
        couleurBranches,
        couleurMonture,
        svgCode: getSVGCode()
      };

      const response = await fetch('/api/saveLunette', {
        method: 'POST',
        headers: {'Content-Type': 'application/json'},
        body: JSON.stringify(data)
      });

      const result = await response.json();

      if (result.success) {
        window.location.href = '/bibliotheque';
      } else {
        alert('Erreur lors de la sauvegarde. Veuillez réessayer.');
      }
    } catch (error) {
      console.error('Erreur:', error);
      alert('Une erreur est survenue. Veuillez réessayer.');
    }
  });
</script>
